<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_side_margin"
    android:paddingLeft="@dimen/nav_header_side_margin"
    android:paddingRight="@dimen/nav_header_side_margin"
    android:paddingTop="@dimen/nav_header_side_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:contentDescription="@string/logo_institute"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:civ_border_width="2dp"
        android:src="@drawable/icon_lib"
        app:civ_border_color="@color/white" />

    <TextView
        android:id="@+id/nav_txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/institute_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


</LinearLayout>
